datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator electric {
  provider                 = "./node_modules/prisma-generator-electric/packages/generator/dist/bin.js"
  output                   = "../src/generated/models"
  relationModel            = true
  writeNullishInModelTypes = true
}

model todo {
  id        String    @id
  listid    String
  list      todolist? @relation(fields: [listid], references: [id])
  text      String
  completed Int       @default(0)
}

model todolist {
  id      String @id
  filter  FilterValues?
  editing String?
  todo    todo[]
}

enum FilterValues {
  all
  active
  completed
}
